<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <title>Son Gelen Mail</title>
    <style>
        body { font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif; line-height: 1.6; margin: 0; padding: 20px; background-color: #f7f7f7; }
        .main-container { max-width: 800px; margin: auto; }
        .card { border: 1px solid #e1e1e1; padding: 25px; margin-top: 20px; border-radius: 8px; background-color: #fff; box-shadow: 0 2px 5px rgba(0,0,0,0.05); }
        .logout-link { display: block; text-align: right; margin-bottom: 10px; }
        .email-header p { margin: 5px 0; color: #555; }
        .email-header strong { color: #222; }
        textarea { width: 95%; min-height: 150px; padding: 10px; font-size: 1em; border: 1px solid #ccc; border-radius: 4px; }
        button { padding: 10px 20px; font-size: 1em; color: white; background-color: #007bff; border: none; border-radius: 4px; cursor: pointer; }
        button:hover { background-color: #0056b3; }
    </style>
</head>
<body>
    <div class="main-container">
        <a href="/logout" class="logout-link">Çıkış Yap</a>
        <hr>

        <% if (locals.isAdmin) { %>
            <div class="card">
                <h2>Yönetici Paneli: Kopyalanacak Metni Düzenle</h2>
                <form action="/update-copy-text" method="post">
                    <textarea name="new_text"><%= locals.copyText %></textarea>
                    <br><br>
                    <button type="submit">Metni Kaydet</button>
                </form>
            </div>
        <% } %>

        <div class="card">
            <h2>Kopyalanacak Mail İçeriği</h2>
            <textarea id="copy-content" readonly style="display:none;"><%= locals.copyText %></textarea>
            <button onclick="copyToClipboard()">maili kopyala</button>
            <p id="copy-feedback" style="color:green;"></p>
        </div>

        <div class="card">
            <h2>Gelen Son Mail (Referans)</h2>
             <% if (locals.email && !locals.email.error) { %>
                <div class="email-header">
                    <p><strong>Geliş Tarihi:</strong> <%= new Date(email.receivedDateTime).toLocaleString('tr-TR') %></p>
                    <p><strong>Konu:</strong> <%= email.subject %></p>
                    <p><strong>Gönderen:</strong> <%= email.from.emailAddress.name %></p>
                </div>
                <hr>
                <div><%- email.body.content %></div>
            <% } else { %>
                <p>Referans mail bulunamadı.</p>
            <% } %>
        </div>
    </div>

    <script>
        function copyToClipboard() {
            const content = document.getElementById('copy-content');
            content.select();
            navigator.clipboard.writeText(content.value).then(() => {
                const feedback = document.getElementById('copy-feedback');
                feedback.textContent = 'Metin başarıyla kopyalandı!';
                setTimeout(() => { feedback.textContent = ''; }, 2000);
            }).catch(err => {
                console.error('Kopyalama başarısız oldu: ', err);
            });
        }
    </script>
</body>
</html>